{
  "name": "@backpack-guilds/contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Backpack Guilds protocol",
  "main": "dist/index.js",
  "scripts": {
    "build": "hardhat compile",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:xsolla": "hardhat deploy --network xsollaZkSepolia && ts-node scripts/postDeploy.ts",
    "deploy:simple": "hardhat run scripts/deploySimple.js --network xsollaZkSepolia",
    "deploy:direct": "hardhat run scripts/deployDirect.js --network xsollaZkSepolia",
    "add:recipes": "hardhat run scripts/addRecipes.js --network xsollaZkSepolia",
    "check:ownership": "hardhat run scripts/transferOwnership.js --network xsollaZkSepolia",
    "seed:xsolla": "ts-node scripts/seedDemo.ts",
    "mint:quick": "node scripts/quickMint.js",
    "chainid:xsolla": "node tools/resolveChainId.js",
    "clean": "hardhat clean"
  },
  "dependencies": {
    "@matterlabs/hardhat-zksync": "^1.6.2",
    "@matterlabs/hardhat-zksync-deploy": "^1.8.0",
    "@openzeppelin/contracts": "^4.9.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.0.0",
    "zksync-ethers": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "hardhat": "^2.19.0",
    "hardhat-deploy": "^0.12.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
