# DOOM Blockchain Integration Configuration
# Copy this file to blockchain.conf and update with your settings

# Blockchain network settings
BLOCKCHAIN_RPC=https://sepolia.era.zksync.dev
CONTRACT_ADDRESS=0x...

# Wallet settings
WALLET_ADDRESS=0x...
PRIVATE_KEY=your_private_key_here

# Game settings
GAME_ADDRESS=0x...
PLAYER_NAME=DoomPlayer

# Blockchain integration settings
ENABLE_BLOCKCHAIN=true
AUTO_FETCH_ITEMS=true
ITEM_REFRESH_INTERVAL=30

# Token mappings
TOKEN_SWORD=1
TOKEN_SHIELD=2
TOKEN_HERB=3
TOKEN_POTION=4
TOKEN_HEALTH_POTION=5
TOKEN_ARMOR=6
TOKEN_SUPER_SHOTGUN=7

# Gameplay settings
ENHANCED_DAMAGE_MULTIPLIER=1.5
ENHANCED_SPEED_MULTIPLIER=1.2
ENHANCED_HEALTH_MULTIPLIER=2.0
ENHANCED_POWERUP_DURATION=2.0

# Party system settings
MAX_PARTY_SIZE=4
ITEM_SHARE_COOLDOWN=60
PARTY_INVITE_TIMEOUT=300

# Crafting settings
CRAFTING_ENABLED=true
CRAFTING_COST_MULTIPLIER=1.0
CRAFTING_SUCCESS_RATE=0.95

# Rental system settings
RENTAL_ENABLED=true
MAX_RENTAL_DURATION=3600
RENTAL_DEPOSIT_MULTIPLIER=0.1
RENTAL_FEE_MULTIPLIER=0.05

# Debug settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
LOG_LEVEL=INFO

# Network settings
CONNECTION_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=5
